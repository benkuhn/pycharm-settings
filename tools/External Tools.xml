<toolSet name="External Tools">
  <tool name="pylint" description="Run pylint on the source file" showInMainMenu="true" showInEditor="true" showInProject="true" showInSearchPopup="true" disabled="false" useConsole="true" showConsoleOnStdOut="true" showConsoleOnStdErr="true" synchronizeAfterRun="true">
    <exec>
      <option name="COMMAND" value="$PyInterpreterDirectory$/pylint" />
      <option name="PARAMETERS" value="--msg-template=&quot;{abspath}:{line}:{column}:{C}: ({symbol}) {msg}&quot; $FilePath$" />
      <option name="WORKING_DIRECTORY" value="$ContentRoot$" />
    </exec>
    <filter>
      <option name="NAME" value="Output" />
      <option name="DESCRIPTION" />
      <option name="REGEXP" value="$FILE_PATH$:$LINE$:$COLUMN$:.*" />
    </filter>
  </tool>
  <tool name="mypy" showInMainMenu="true" showInEditor="true" showInProject="true" showInSearchPopup="true" disabled="false" useConsole="true" showConsoleOnStdOut="true" showConsoleOnStdErr="true" synchronizeAfterRun="true">
    <exec>
      <option name="COMMAND" value="$PyInterpreterDirectory$/mypy" />
      <option name="PARAMETERS" value="$FilePath$" />
      <option name="WORKING_DIRECTORY" value="$ContentRoot$" />
    </exec>
  </tool>
  <tool name="reviewlint" description="Show Github PR comments" showInMainMenu="true" showInEditor="true" showInProject="true" showInSearchPopup="true" disabled="false" useConsole="true" showConsoleOnStdOut="true" showConsoleOnStdErr="true" synchronizeAfterRun="true">
    <exec>
      <option name="COMMAND" value="$PyInterpreterDirectory$/python" />
      <option name="PARAMETERS" value="$USER_HOME$/wave/scratch/reviewlint.py" />
      <option name="WORKING_DIRECTORY" value="$ContentRoot$" />
    </exec>
    <filter>
      <option name="NAME" value="Line num" />
      <option name="DESCRIPTION" />
      <option name="REGEXP" value="$FILE_PATH$:$LINE$:.*" />
    </filter>
  </tool>
</toolSet>